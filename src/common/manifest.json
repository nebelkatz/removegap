{
    "manifest_version": 3,
    "name": "RemoveGap",
    "description": "Ersetzt alle Genderstile mit Sonderzeichen durch die gew√ºnschte Form.",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content/content.css"],
            "js": ["content/content.js"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
      },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon_16.png",
            "32": "images/icon_32.png"
          }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "alarms",
        "notifications"
    ],
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png"
      }
}